{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "sourceMap": true,
    "lib": ["es2017", "dom"],
    "allowJs": true,
    "jsx": "preserve",
    "strict": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "Components/*": ["src/common/shared/components/*"],
      "styledComponents": ["src/common/styledComponents.ts"]
    }
  },
  "exclude": ["node_modules"]
}
